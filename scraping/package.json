{
  "name": "polymarket-scraper",
  "version": "1.0.0",
  "description": "CLI tool for scraping Polymarket data (markets, comments, and price history)",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "db:generate": "npx prisma generate",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:seed": "ts-node src/prisma/seed/seed.ts",
    "scrape:all": "ts-node src/cli.ts scrape:all",
    "scrape:markets": "ts-node src/cli.ts scrape:markets",
    "scrape:comments": "ts-node src/cli.ts scrape:comments",
    "scrape:prices": "ts-node src/cli.ts scrape:prices",
    "scrape:price-history": "ts-node src/cli.ts scrape:price-history",
    "runs": "ts-node src/cli.ts runs"
  },
  "dependencies": {
    "@apollo/server": "5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-tools/utils": "10.9.1",
    "@nestjs/apollo": "^13.2.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/graphql": "13.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/terminus": "^11.0.0",
    "@polymarket/clob-client": "^4.22.8",
    "@prisma/client": "6.16.3",
    "bottleneck": "^2.19.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "commander": "^14.0.2",
    "env-var": "^7.5.0",
    "graphql": "16.11.0",
    "graphql-subscriptions": "3.0.0",
    "graphql-tools": "^9.0.20",
    "polymarket-data": "^0.0.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.8",
    "@nestjs/testing": "11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "^24.7.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "prisma": "^6.16.3",
    "source-map-support": "^0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.4",
    "ts-loader": "9.5.4",
    "ts-morph": "^25.0.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
